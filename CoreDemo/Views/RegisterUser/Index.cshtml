@using CoreDemo.Models
@model UserSignUpViewModel

@{
	Layout = null;
}

<!DOCTYPE html>
<html>

<head>

	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>INSPINIA | Register</title>

	<link href="~/admin/css/bootstrap.min.css" rel="stylesheet">
	<link href="~/admin/font-awesome/css/font-awesome.css" rel="stylesheet">
	<link href="~/admin/css/plugins/iCheck/custom.css" rel="stylesheet">
	<link href="~/admin/css/animate.css" rel="stylesheet">
	<link href="~/admin/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

	<div class="middle-box text-center loginscreen   animated fadeInDown">
		<div>
			<div>

				<h2 class="logo-name">Wise</h2>

			</div>
			<h3>Kayıt Ekranı</h3>
			<p>Yeni bir hesap oluşturun</p>
			<form class="m-t" role="form" asp-action="Index">

				<div class="form-group">
					<span asp-validation-for="@Model.FullName" class="text-danger"></span>
					<input type="text" class="form-control" asp-for="@Model.FullName" placeholder="İsim Soyad" >
				</div>
				<div class="form-group">
					<span asp-validation-for="@Model.Email" class="text-danger"></span>
					<input type="email" class="form-control" asp-for="@Model.Email" placeholder="E-Posta">
				</div>	
				<div class="form-group">
					<span asp-validation-for="@Model.UserName" class="text-danger"></span>
					<input type="text" class="form-control" asp-for="@Model.UserName" placeholder="Kullanıcı Adı" >
				</div>
				<div class="form-group">
					<span asp-validation-for="@Model.Password" class="text-danger"></span>
					<input type="password" class="form-control" asp-for="@Model.Password" placeholder="Şifre" >
				</div>
				<div class="form-group">
					<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
					<input type="password" class="form-control" asp-for="@Model.ConfirmPassword" placeholder="Şifre Tekrarı" >
				</div>
				<div class="form-group">
					<div class="checkbox i-checks"><label> <input type="checkbox" required=""><i></i> Tüm şartları ve koşulları okudum; kabul ediyorum. </label></div>
				</div>
				<button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

				<p class="text-muted text-center"><small>Zaten bir hesabınız var mı?</small></p>
				<a class="btn btn-sm btn-white btn-block" href="/Login/Index/">Giriş Yap</a>
				<div class="text-danger" asp-validation-summary="ModelOnly"></div>
			</form>
			<p class="m-t"> <small>Asp.Net Core 5.0 WiseBlog Project|Tüm hakları saklıdır. &copy; @DateTime.Now.Year</small> </p>
		</div>
	</div>

	<!-- Mainly scripts -->
	<script src="~/admin/js/jquery-3.1.1.min.js"></script>
	<script src="~/admin/js/popper.min.js"></script>
	<script src="~/admin/js/bootstrap.js"></script>
	<!-- iCheck -->
	<script src="~/admin/js/plugins/iCheck/icheck.min.js"></script>
	<script>
		$(document).ready(function(){
			$('.i-checks').iCheck({
				checkboxClass: 'icheckbox_square-green',
				radioClass: 'iradio_square-green',
			});
		});
	</script>
</body>

</html>
