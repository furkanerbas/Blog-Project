@using Entity.Concrete
@model List<Blog>

<div class="row">
	<div class="col-12 grid-margin">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Son 10 Blog </h4>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th> # </th>
								<th> Başlık </th>
								<th> Kategori </th>
								<th> Tarih </th>
								<th>Detaylar</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var b in Model)
						   {
							   <tr>
								<td>
									<img src="@b.Image" class="mr-2" alt="image"> 
								</td>
								<td>@b.Title</td>
								<td>
									<label class="badge badge-gradient-success">@b.Category.Name</label>
								</td>
								<td> @(((DateTime )@b.CreateDate).ToString("dd.MMM.yyyy")) </td>
								<td> <a href="/Blog/BlogReadAll/@b.Id" class="btn btn-dark">Detaylar</a> </td>
							</tr>
						   }
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>