@using Entity.Concrete
@model List<Blog>

<div class="tech-btm">
	<h3>Son Postlar</h3>
	@foreach (var b in Model)
	{
		<div class="blog-grids row mb-3">
			<div class="col-md-5 blog-grid-left">
				<a href="/Blog/BlogReadAll/@b.Id">
					<img src="@b.Image" class="card-img-top img-fluid" alt="">
				</a>
			</div>
			<div class="col-md-7 blog-grid-right">

				<h5>
					<a href="/Blog/BlogReadAll/@b.Id">@(b.Content.Length > 50 ? b.Content.Substring(0, b.Content.Substring(0,50).LastIndexOf(" "))+"..." : b.Content +"...") </a>
				</h5>
				<div class="sub-meta">
					<span>
						<i class="far fa-clock"></i> @(((DateTime )@b.CreateDate).ToString("dd.MMM.yyyy"))
					</span>
				</div>
			</div>
		</div>
	}
</div>