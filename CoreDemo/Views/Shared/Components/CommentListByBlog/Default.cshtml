@model IEnumerable<Entity.Concrete.Comment>
<div class="comment-top">
	<h4>Yorumlar</h4>
 @foreach (var c in Model)
{
	<div class="media">
		<img src="~/BlogTemplate/images/t1.jpg" alt="" class="img-fluid" />
