@using Entity.Concrete
@model List<Blog>

<div class="tech-btm">
	<h4>Yazarın diğer gönderileri</h4>

	@foreach (var b in Model)
   {
	   <div class="blog-grids row mb-3">
		<div class="col-md-5 blog-grid-left">
			<a href="single.html">
				<img src="@b.Image" class="img-fluid" alt="">
			</a>
		</div>
		<div class="col-md-7 blog-grid-right">

			<h5>
				<a href="single.html">@b.Title</a>
			</h5>
			<div class="sub-meta">
				<span>
					<i class="far fa-clock"></i>  @(((DateTime )@b.CreateDate).ToString("dd.MMM.yyyy"))
				</span>
			</div>
		</div>

	</div>
   }
	
	
</div>